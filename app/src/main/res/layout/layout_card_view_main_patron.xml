<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_card_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fiveDip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="3"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/fiveDip"
                    android:layout_marginEnd="@dimen/fiveDip"
                    android:layout_marginTop="@dimen/fiveDip"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_view_lable_amt_commited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/committed_amount"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_view_mrn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/twoDip"
                        android:layout_toEndOf="@+id/txt_view_lable_amt_commited"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_color_blue" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/twoDip">

                        <TextView
                            android:id="@+id/txt_view_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="State:"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/txt_view_state_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/twoDip"
                            android:layout_toEndOf="@+id/txt_view_state"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_color_blue" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/veiw_one"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl_amt"
                    android:layout_marginEnd="@dimen/fifteenDip"
                    android:background="@color/light_blue_color" />

                <RelativeLayout
                    android:id="@+id/ll_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/veiw_one"
                    android:layout_marginBottom="@dimen/fiveDip"
                    android:layout_marginEnd="@dimen/fiveDip"
                    android:layout_marginTop="@dimen/fiveDip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/twoDip">

                        <TextView
                            android:id="@+id/txt_view_lable_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/balance"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/txt_view_pin_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/twoDip"
                            android:layout_toEndOf="@+id/txt_view_lable_balance"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_color_blue" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/twoDip"
                        android:layout_marginRight="@dimen/fiveDip">

                        <TextView
                            android:id="@+id/txt_view_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/paid"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/txt_view_country_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/twoDip"
                            android:layout_toEndOf="@+id/txt_view_country"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text_color_blue" />

                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/fiveDip"
                    android:layout_marginEnd="@dimen/fiveDip"
                    android:layout_marginTop="@dimen/fiveDip"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_view_profadrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Address:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_view_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/twoDip"
                        android:layout_toEndOf="@+id/txt_view_profadrees"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_color_blue" />


                </RelativeLayout>

                <View
                    android:id="@+id/veiw_three"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl_amt"
                    android:layout_marginEnd="@dimen/fifteenDip"
                    android:background="@color/light_blue_color" />


            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/view_three"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_card"
            android:layout_marginEnd="@dimen/sixtyDip"
            android:background="@color/light_blue_color" />

        <View
            android:id="@+id/view_eight"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_hiding"
            android:background="@color/light_blue_color"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
